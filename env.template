# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS NEO4J
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password

# =============================================================================
# CONFIGURACIÓN DE PROVEEDORES DE IA
# =============================================================================

# Anthropic Claude (requerido para funcionalidad básica)
ANTHROPIC_API_KEY=

# Azure OpenAI (opcional)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_DEPLOYMENT_NAME=gpt-4o

# AWS Bedrock (opcional - usa AWS profiles)
AWS_PROFILE=
AWS_REGION=us-east-1
DEFAULT_AWS_MODEL=anthropic.claude-3-sonnet-20240229-v1:0

# =============================================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =============================================================================
FLASK_PORT=5000
FLASK_HOST=0.0.0.0
FLASK_DEBUG=False

# =============================================================================
# CONFIGURACIÓN DE PROVEEDOR PREDETERMINADO
# =============================================================================
# Valores posibles: anthropic, azure_openai, aws_bedrock
DEFAULT_LLM_PROVIDER=anthropic 